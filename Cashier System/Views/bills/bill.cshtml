@model Cashier_System.Models.BillViewModel
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "bill";
}

@using Microsoft.AspNetCore.Identity
@using Cashier_System
@using Cashier_System.Data
@namespace Cashier_System.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using DevExtreme.AspNet.Mvc
<h1>bill</h1>
@{int total = 0; } 
<table class="table">
    <thead>
        <tr>
            <th>
                اسم المنتج
            </th>
            <th>
              الكمية
            </th>
            <th>
              السعر
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Key)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @{
                        total +=(int)Model.Total[item.Key];
                    }
                   @Model.Total[item.Key]
                </td>


            </tr>
        }
    </tbody>
</table>
<div>Total = @total </div>
<br />
<div>
    <h4>Bills</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.bill.cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bill.cost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.bill.Discount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bill.Discount)%
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.bill.Taxes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bill.Taxes)%
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.bill.user)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bill.user)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.bill.date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bill.date)
        </dd>
    </dl>
</div>
<div>

    <a asp-action="Edit_Bill" asp-route-Bill_Id="@Model.bill.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>

</div>

<button class="btn btn-success"> print </button>
