@model Cashier_System.Models.EditPasswordViewModel
@{
    Layout = "_Layout";
}

@using Microsoft.AspNetCore.Identity
@using Cashier_System
@using Cashier_System.Data
@namespace Cashier_System.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-action="EditCashier" method="post">
    <div>

        <hr />
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                <input type="text" asp-for="Id" class="form-control" disabled />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                <input type="text" asp-for="Email" class="form-control" disabled />
            </dd>
          
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NewPassword)
            </dt>
            <dd class="col-sm-10">
                <input type="text" asp-for="NewPassword" class="form-control" />
            </dd>
            <dt> <button type="submit" class="btn btn-success">Submit</button></dt>
        </dl>
    </div>
</form>